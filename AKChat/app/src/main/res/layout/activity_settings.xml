<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="vn.edu.hust.student.duyanh.akchat.SettingsActivity">

    <include
        android:id="@+id/main_app_sidebar"
        layout="@layout/app_sidebar_layout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_app_sidebar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/settings_edit_info"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/tableLayout"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/edit" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/settings_display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/settings_profile"
                android:layout_marginTop="22dp"
                android:text="Display name"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/settings_display_name"
                android:layout_marginTop="19dp"
                android:textSize="14sp"
                android:inputType="text"
                android:textColor="#ffffff"
                android:text="Xin chào. Cảm ơn đã ghé thăm!"
                android:paddingLeft="12dp" />
            <TextView
                android:id="@+id/textview_about_me"
                android:layout_below="@+id/settings_description"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About me"
                android:textColor="#ff0000"
                android:paddingLeft="12dp"
                android:textStyle="bold"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/textview_about_me"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"
                android:background="#7b7777"
                android:id="@+id/tableLayout">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Full name"/>
                    <TextView
                        android:id="@+id/settings_full_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/settings_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Home town"/>
                    <TextView
                        android:id="@+id/settings_home_town"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Number phone"/>
                    <TextView
                        android:id="@+id/settings_number_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Birthday"/>
                    <TextView
                        android:id="@+id/settings_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Zodiac"/>
                    <TextView
                        android:id="@+id/settings_zodiac"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="1dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:text="Friends number"/>
                    <TextView
                        android:id="@+id/settings_friends_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:text=""/>
                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
