<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_friend_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:src="@drawable/default_avatar"/>
    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chat_friend_profile"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:layout_margin="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="16sp"/>
    <!--//nhung cai thay doi la mau nen, mau chu, align right or left -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_friend_seen"
        android:layout_below="@+id/message_textview"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:textSize="12sp"/>

</RelativeLayout>