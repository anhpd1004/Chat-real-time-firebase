<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_friend_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/default_avatar"/>
    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chat_friend_profile"
        android:maxWidth="250dp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/message_imageview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_toEndOf="@+id/chat_friend_profile"
        android:maxWidth="250dp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"/>
    <!--//nhung cai thay doi la mau nen, mau chu, align right or left -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_friend_seen"
        android:layout_below="@+id/message_textview"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:text="seen"
        android:textSize="12sp"/>

</RelativeLayout>